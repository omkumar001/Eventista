    <section class="get-in-touch">
      <h1 class="title"> Edit Profile</h1>
      <form class="contact-form row" onSubmit = "return checkpass(this)" action="/editProfile/<%= username %>" method="POST" >

         <div class="form-field col-lg-6">
            <input id="name" class="input-text js-input" name="fullname" value="<%= name %> " type="text" placeholder="Full Name" required>
         </div>
          

         <% if(role=="organiserProfile") { %> 
         <div class="form-field col-lg-6 ">
            <input id="text" class="input-text js-input" name="orgname" value="<%= orgname %> " type="text" placeholder="Organisation Name" required>
           </div>
        <% } %> 
         
        <div class="form-field col-lg-6 ">
            <input id="email" class="input-text js-input" name="email" value="<%= email %> " type="email" placeholder="E-mail" required>
         </div>
         
         
         <% if(role=="organiserProfile") { %> 
            <div class="form-field col-lg-6">
             <input id="name" class="input-text js-input" name="contactno" value="<%= contact %> " type="tel" placeholder="Contact Number" required>
             </div>

             <div class="form-field col-lg-6 ">
              <input id="text" class="input-text js-input" name="twitter" value="<%= Twitter %> " type="text" placeholder="Twitter Handle" required>
             </div>

             <div class="form-field col-lg-6 ">
              <input id="text" class="input-text js-input" name="insta" value="<%= Instagram %> " type="text" placeholder="Instagram Handle" required>
             </div>

             <div class="form-field col-lg-6 ">
              <input id="text" class="input-text js-input" name="facebook" value="<%= Facebook %> " type="text" placeholder="Facebook Handle" required>
             </div>

            <% } %> 
            

         <div class="form-field col-lg-6">
          <input id="name" class="input-text js-input " name="password1" value="<%= pass %>"  type="password" placeholder="Password" required>
       </div>

       <div class="form-field col-lg-6">
        <input id="name" class="input-text js-input " name="password2" value="" type="password" placeholder="Confirm Password" required>
     </div>


     <% if(role=="attendeeProfile") { %> 
     <div class="form-field col-lg-6">
        <input id="name" class="input-text js-input" type="date" name="dob" value="<%= doob %>" placeholder="D.O.B" required/>
         <label class="label" for="name">D.O.B</label>
        </div>
        <% } %> 


     <div class="form-field col-lg-12">
     <input class="submit-btn" type="submit" value="Submit">
    </div>

      </form>
   </section>

